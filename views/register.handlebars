<header>
  {{#if logged_in}}
  <nav class="topnav">
    <a href="/">
      <img src="/css/assets/time-tracker-icon.png" alt="time tracker logo" width="5%">
    </a>
    <ul>
      <div class="navlistleft">
        {{#if isManager}}
        <li><a href='/data'>DASHBOARD</a></li>
        <li><a href='/register'>CREATE EMPLOYEE</a></li>
        <li><a href='/createproduct'>CREATE A PRODUCT</a></li>
      </div>
      <div class="navlistright">
        <h3>{{user.name}}</h3>
        {{/if}}
        {{#if logged_in}}
        <li><button id="logout">LOGOUT</button></li>
        {{/if}}
      </div>
    </ul>
  </nav>
  {{/if}}
</header>

<h2 class='page-title'>REGISTER NEW</h2>
  <form class='form signup-form'>
    <div class='form-group'>
      <label for='name-signup'>Username:</label>
      <input class='form-input' type='text' id='name-signup' />
    </div>
    <div class='form-group'>
      <label for='email-signup'>Email:</label>
      <input class='form-input' type='text' id='email-signup' />
    </div>
    <div class='form-group'>
      <label for='password-signup'>Password:</label>
      <input class='form-input' type='password' id='password-signup' />
    </div>
    <div class='form-group'>
      <label for='role-signup'>Role:</label>
      <select class='form-input' id='role-signup'>
        <option value='manager'>Manager</option>
        <option value='employee'>Employee</option>
      </select>
    </div>
    <div class='form-group'>
      <button  type='submit'>CREATE</button>
    </div>
  </form>
</div>

<script src='./js/register.js'></script>