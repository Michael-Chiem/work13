<style>
  .print-button {
    position: fixed;
    bottom: 20px;
    right: 20px;
  }

  table {
    border-collapse: collapse;
    width: 100%;
  }

  th,
  td {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;
  }
</style>

{{#if isManager}}
<a href='/register'>Create Employee</a>
<a href='/createproduct'>Create A Product</a>
